{
  "name": "alessi-dawn",
  "description": "Modern Shopify theme",
  "author": "Mattia Dragone",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "login": "shopify login --store=test12345678064.myshopify.com",
    "start": "run-p -sr shopify:serve webpack:watch",
    "deploy": "run-s webpack:build && shopify theme push",
    "deploy:new": "run-s webpack:build && shopify theme push --unpublished",
    "webpack:watch": "cross-env NODE_ENV=development BROWSERSLIST_ENV=development BROWSERSLIST_CONFIG=.config/.browserslistrc webpack --config .config/webpack/webpack.dev.js --watch --progress",
    "webpack:build": "cross-env NODE_ENV=production BROWSERSLIST_ENV=production BROWSERSLIST_CONFIG=.config/.browserslistrc webpack --config .config/webpack/webpack.prod.js --progress",
    "shopify:serve": "shopify theme serve --live-reload hot-reload",
    "shopify:pull": "shopify theme pull",
    "lint": "run-s -c lint:*",
    "lint:js": "eslint ./src/scripts/**/*.js --config .config/.eslintrc.js",
    "lint:css": "stylelint ./src/styles/**/*.{css,sass,scss} --config .config/.stylelintrc.js",
    "lint:shopify": "cd shopify && shopify theme check",
    "fix": "run-s -c fix:*",
    "fix:js": "eslint ./src/scripts/**/*.js --config .config/.eslintrc.js --fix",
    "fix:css": "stylelint src/styles/**/*.{css,sass,scss} --config .config/.stylelintrc.js --fix",
    "fix:shopify": "shopify theme check -a",
    "fix-js": "eslint-auto-fix ./src/scripts/**/*.js"
  },
  "dependencies": {
    "@shopify/shopify-api": "^5.0.1",
    "@shopify/theme-a11y": "3.0.0",
    "@shopify/theme-cart": "^3.0.0",
    "@shopify/theme-currency": "3.0.0",
    "@shopify/theme-images": "3.0.0",
    "@shopify/theme-predictive-search": "^3.0.3",
    "@shopify/theme-predictive-search-component": "^3.0.3",
    "@shopify/theme-sections": "3.0.0",
    "ajaxinate": "^3.0.1",
    "debounce": "^1.2.1",
    "eslint-auto-fix": "^1.0.4",
    "jquery": "^3.6.0",
    "tailwindcss": "^3.0.2",
    "vue": "^3.2.26",
    "vuex": "^4.0.2",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-remove-empty-scripts": "^0.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-runtime": "^7.16.4",
    "@babel/preset-env": "^7.16.4",
    "@vue/compiler-sfc": "^3.2.26",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "eslint": "^8.4.1",
    "eslint-plugin-vue": "^8.2.0",
    "eslint-webpack-plugin": "^3.1.1",
    "glob": "^7.1.6",
    "jest-worker": "^27.3.1",
    "mini-css-extract-plugin": "^2.4.5",
    "node-sass": "^4.14.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "postcss-html": "^1.3.0",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.2.1",
    "sass": "^1.49.7",
    "sass-loader": "^12.4.0",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-webpack-plugin": "^3.1.0",
    "unplugin-auto-import": "^0.9.5",
    "url-loader": "^4.1.1",
    "vue-loader": "^16.8.3",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0",
    "webpack-merge": "^5.8.0"
  }
}
